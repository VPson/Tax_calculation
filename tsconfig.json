{
  "compilerOptions": {
    "target": "es2017",               
    "lib": ["es6"],             
    "baseUrl": "./src",                           
    "paths": {
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
		},      
    "experimentalDecorators": true,   
    "emitDecoratorMetadata": true,    
    "allowJs": true,                  
    "module": "commonjs",  
    "outDir": "./dist",               
    "rootDir": "./",               
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                
    "esModuleInterop": true,                    
    "resolveJsonModule": true,        
    "removeComments": true,           
    "forceConsistentCasingInFileNames": true,   
    "noImplicitAny": true,                      
    "skipLibCheck": true,
  }
}

